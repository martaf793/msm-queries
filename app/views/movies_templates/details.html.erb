<h1> Movie <%=@the_movie.id%> </h1>
<a href="/movies">Go back</a>
<hr>
  <dl>
  <dt>Title</dt>
  <dd> <%=@the_movie.title%></dd>
  
  <dt>Year</dt>
  <dd> <%=@the_movie.dyear%></dd>

  <dt>Duration</dt>
  <dd> <%=@the_movie.duration%></dd>

  <dt>Description</dt>
  <dd> <%=@the_movie.description%></dd>

  <dt>Director</dt>
  <dd> 
    <%=matching_records=Director.where({:id => @the_movie.director_id})%>
    <%=the_director=matching_records.at(0)%>
    <%=the_director,name%></dd>

  <dt>Image</dt>
  <dd> <img scr="<%=@the_movie.image%>" width="200"</dd>

  <dt>Created at</dt>
  <dd> <%=@the_movie.created_at%></dd>

  <dt>Updated at</dt>
  <dd> <%=@the_movie.updated_at%></dd>
  </dl>
</hr>

 <%=matching_movies=Movie.where({:the_director=> @the_director.id})%>
 <table>
 <lr>
  <th>ID</th>
  <th>Image </th>
  <th>Title</th>
  <th>Year</th>
  <th>Director</th>
 </lr>

 <h2>Filmography</h2>
 <%=@matching_movies.each do |a_movie|%>
  <tr>
    <td><%= a_movie.id%></td>
    <td><img src="<%= a_movie.image%>" width="50" </td>
    <td><%= a_movie.title%></td>
    <td><%= a_movie.year%></td>
    <td><%= @director.name%></td>
    <td>
      <a href="/movies/<%= a_movie.id%>">
      Show details
      </a>
    </td>
 </tr>
 <%= end%>
</table>
